        android:theme="@style/AppTheme"
        tools:targetApi="31">
        <activity
            android:name=".fragments.gamemodes.SentenceConstruction2"
            android:exported="false" />
        <activity
            android:name=".fragments.gamemodes.WordAssociation2"
            android:exported="false" />
        <activity
            android:name=".fragments.gamemodes.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".fragments.gamemodes.SentenceFragment2"
            android:exported="false" />
        <activity
            android:name=".fragments.mainmenu.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.gamemodes.SentenceFragment"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".fragments.gamemodes.SentenceConstruction"
