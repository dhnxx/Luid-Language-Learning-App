<?xml version="1.0" encoding="utf-8"?>
<!-- XML layout for achievements card view -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/achvcardview"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:src="@drawable/about" />

            <TextView
                android:id="@+id/achvcurrlvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Level 1"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/achvprogressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:progress="28"
                android:progressTint="?attr/colorOnSecondary"
                android:progressBackgroundTint="@color/md_theme_dark_outline"/>

            <TextView
                android:id="@+id/achvprogresstxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="1/5"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/achvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Title"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/achvdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Description"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="10sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>










    </androidx.constraintlayout.widget.ConstraintLayout>



