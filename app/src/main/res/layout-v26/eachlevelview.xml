<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_margin="10dp"
    android:clickable="false"
    android:focusable="false"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/level_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:background="@color/colorPlaceholder1"
            android:scaleType="fitXY"
            android:src="@drawable/about_background" />
        <ProgressBar
            android:id="@+id/achvprogressBar"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:progress="28"
            android:progressBackgroundTint="?attr/colorSurface"
            android:progressTint="@color/colorPlaceholder2"/>


        <TextView
            android:id="@+id/level_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:gravity="start"
            android:text="Level 1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/level_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:text="Introduction"
            android:textAlignment="textStart"
            android:textColor="?attr/colorTertiary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level_titleAlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="start"
            android:text="Introduction"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/level_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"
            android:text="Start your Kapampangan journey with basic words, personal pronouns, connectors/articles, and adjectives!"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />


        <Button
            android:id="@+id/levelButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Play">


        </Button>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>