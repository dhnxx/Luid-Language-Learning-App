<?xml version="1.0" encoding="utf-8"?>

<resources>

    /* Custom Indicator for NavBar */

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:height">60dp </item>
        <item name="android:width">75dp </item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoRippleCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">@null</item>
        <item name="android:foregroundTint">@android:color/transparent</item>
    </style>


</resources>